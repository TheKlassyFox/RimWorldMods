<?xml version="1.0" encoding="utf-8"?>
<SettingsBlock>
	<ModSettings Class="LevelUp.Settings">
		<profile>
			<levelUpActionMaker>
				<actions>
					<li Class="LevelUp.AnimationAction">
						<def>LevelUpActionDef_Animation</def>
						<active>True</active>
						<animation Class="LevelUp.FleckAnimation">
							<fleckDef>LevelUpAnimation_UpwardChevron</fleckDef>
						</animation>
					</li>
					<li Class="LevelUp.OverheadMessageAction">
						<def>LevelUpActionDef_OverheadMessage</def>
						<active>True</active>
						<text>&lt;color=yellow&gt;{SKILL} {LEVEL} ▲&lt;/color&gt;</text>
					</li>
					<li Class="LevelUp.SoundAction">
						<def>LevelUpActionDef_Sound</def>
						<active>True</active>
						<soundDef>LevelUpSound_Ding</soundDef>
					</li>
					<li Class="LevelUp.MessageAction">
						<def>LevelUpActionDef_Message</def>
						<active>True</active>
						<text>{PAWN}의 {SKILL} 기술이 {LEVEL}로 올랐습니다!</text>
					</li>
				</actions>
			</levelUpActionMaker>
			<levelDownActionMaker>
				<actions>
					<li Class="LevelUp.AnimationAction">
						<def>LevelUpActionDef_Animation</def>
						<active>True</active>
						<animation Class="LevelUp.FleckAnimation">
							<fleckDef>LevelUpAnimation_DownwardChevron</fleckDef>
						</animation>
					</li>
					<li Class="LevelUp.OverheadMessageAction">
						<def>LevelUpActionDef_OverheadMessage</def>
						<active>True</active>
						<text>&lt;color=red&gt;{SKILL} {LEVEL} ▼&lt;/color&gt;</text>
					</li>
					<li Class="LevelUp.SoundAction">
						<def>LevelUpActionDef_Sound</def>
						<active>True</active>
						<soundDef>LevelUpSound_Negative</soundDef>
					</li>
					<li Class="LevelUp.MessageAction">
						<def>LevelUpActionDef_Message</def>
						<active>True</active>
						<text>{PAWN}의 {SKILL} 기술이 {LEVEL}로 내려갔습니다!</text>
					</li>
				</actions>
			</levelDownActionMaker>
			<generalSettingsContent>
				<cooldownSeconds>20</cooldownSeconds>
			</generalSettingsContent>
		</profile>
	</ModSettings>
</SettingsBlock>